<style>
    .title {
        font-size: 2rem;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 40px;
    }

    .locations-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin: 0 20px;
    }

    .location-item {
        background-color: #1a202c;
        color: #ffffff;
        padding: 16px 24px;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        text-align: center;
        transition: background-color 0.3s ease;
    }


    @media (max-width: 768px) {
        .locations-container {
            gap: 12px;
        }

        .location-item {
            font-size: 1rem;
            padding: 14px 18px;
        }
    }

    .icon {
        margin-bottom: 34px;
    }
</style>

