<style>
    .title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 50px;
    }

    .locations-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin: 0 20px;
    }

    .location-item {
        padding: 16px 24px;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: 1px solid #ddd;
    }

    /* Modalità chiara */
    .location-item {
        background-color: #ffffff; /* Bianco */
        color: #1a202c; /* Testo scuro */
        border: 1px solid #ddd;
    }

    /* Modalità scura */
    html.dark .location-item {
        background-color: #1a202c; /* Scuro */
        color: #ffffff; /* Testo bianco */
        border: 1px solid #2d3748;
    }

    /* Hover */
    .location-item:hover {
        background-color: #f9fafb;
        transform: scale(1.05);
    }

    /* Modalità scura: hover */
    html.dark .location-item:hover {
        background-color: #2d3748;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .locations-container {
            gap: 12px;
        }

        .location-item {
            font-size: 1rem;
            padding: 14px 18px;
        }
    }
</style>

